package views

import "goBoard/internal/core/domain"
import "strconv"

import common "goBoard/internal/transport/handlers/common/views"

templ Home(content templ.Component) {
	@Head()
	<body>
		<div id="content">
			<div class="pad">
				<div class="clear" id="wrap_l56761">
					<h3 class="title">elitism. secrecy. tradition.</h3>
					<div id="auth"></div>
					<div class="clear"></div>
					@common.UpperNav()
					<div id="data">
						@content
					</div>
				</div>
			</div>
		</div>
	</body>
}

templ Threads(threads []domain.Thread, cursors domain.Cursors) {
	<div id="threads">
		for _, thread := range threads {
			@ThreadRow(thread)
		}
        @common.LowerNav(cursors)
	</div>
}

templ ThreadRow(thread domain.Thread) {
	<div class="thread_row">
		<ul class="list read" id="list_l56761">
			<li class="readbar">&nbsp;</li>
			<li class="member">
				<a class="memberlink">{ thread.MemberName }</a>
			</li>
			<li class="subject">
				<div class="extra">Â»&nbsp;</div>
				<a>{ thread.Subject }</a>
			</li>
			<li class="posts">{ strconv.Itoa(thread.NumPosts) }</li>
			<li class="lastpost">
				<a href="/member/view/{{ .LastPosterName }}" class="memberlink">{ thread.LastPosterName }</a> on { thread.DateLastPosted.Format("Mon Jan 2, 2006 03:04 pm") }
			</li>
		</ul>
	</div>
}
